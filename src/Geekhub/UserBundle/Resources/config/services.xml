<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

<parameters>
        <parameter key="gh_user.oauth_user_provider.class">Geekhub\UserBundle\UserProvider\OAuthUserProvider</parameter>
        <parameter key="gh_fosuser.oauth_user_provider.class">Geekhub\UserBundle\UserProvider\MyFOSUBUserProvider</parameter>

</parameters>

 
<services>
        <service id="gh_user.oauth_user_provider" class="%gh_user.oauth_user_provider.class%"> 
    </service>
    <service id="gh_fosuser.oauth_user_provider" class="%gh_fosuser.oauth_user_provider.class%"> 
     	<argument type="service" id="fos_user.user_manager" />
        <argument type="collection">
         	<argument key="facebook">facebook_id</argument>
         	<argument key="vkontakte">vkontakte_id</argument>
         	<argument key="odnoklassniki">odnoklassniki_id</argument>
        </argument>
            <call method="setKernelWebDir">
                <argument type="string">%kernel.root_dir%</argument>
            </call>
             <call method="setAppKeys">
                <argument type="collection">
                    <argument key="odnoklassniki_app_key">%odnoklassniki_app_key% </argument>
                    <argument key="odnoklassniki_app_secret">%odnoklassniki_app_secret%</argument>
                </argument>
            </call>
    </service>
</services>
</container>
